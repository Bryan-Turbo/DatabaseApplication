<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Assignment_1.UserControls.ApplicationWindows"
             xmlns:EntityViews="clr-namespace:Assignment_1.UserControls.EntityViews" 
             x:Class="Assignment_1.UserControls.ApplicationWindows.ViewEmployeeWindow"
             mc:Ignorable="d" 
             d:DesignHeight="610" d:DesignWidth="1155">
    <Grid>

        <EntityViews:EmployeeViewer x:Name="EmployeeViewer" Margin="0,0,0,200"/>
        <Button x:Name="EditButton" IsEnabled="False" Content="Edit Selected Employee" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="250" Height="50" Click="EditButton_Click"/>
        <Button x:Name="RemoveButton" IsEnabled="False" Content="Remove Selected Employee" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="250" Height="50" Click="RemoveButton_Click"/>

    </Grid>
</UserControl>
